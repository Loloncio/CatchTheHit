<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#252525"
        android:backgroundTintMode="add" />

    <TextView
        android:id="@+id/resultadoJugador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Tu jugador:"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:text="Lider carismatico"
        android:textAlignment="center"
        android:textSize="20sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/carisma"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/proggres_bar"
            android:progressTint="#D50000"
            android:tooltipText="22" />

        <TextView
            android:id="@+id/carismatxt"
            app:layout_constraintBottom_toBottomOf="@+id/carisma"
            app:layout_constraintStart_toStartOf="@+id/carisma"
            app:layout_constraintTop_toTopOf="@+id/carisma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="50%"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:text="Lider transformacional"
        android:textAlignment="center"
        android:textSize="20sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/transformacional"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/proggres_bar"
            android:progressTint="#D50000"
            android:tooltipText="22" />

        <TextView
            android:id="@+id/tranformacionaltxt"
            app:layout_constraintBottom_toBottomOf="@+id/transformacional"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/transformacional"
            app:layout_constraintTop_toTopOf="@+id/transformacional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="50%"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:text="Comunicativo"
        android:textAlignment="center"
        android:textSize="20sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/comunicativo"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/proggres_bar"
            android:progressTint="#304FFE"
            android:tooltipText="22" />

        <TextView
            android:id="@+id/comunicativotxt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/comunicativo"
            app:layout_constraintTop_toTopOf="@+id/comunicativo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="50%"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:text="Trabajo en equipo"
        android:textAlignment="center"
        android:textSize="20sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/equipo"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/proggres_bar"
            android:progressTint="#00C853"
            android:tooltipText="22"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/equipotxt"
            app:layout_constraintBottom_toBottomOf="@+id/equipo"
            app:layout_constraintStart_toStartOf="@+id/equipo"
            app:layout_constraintTop_toTopOf="@+id/equipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="50%"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>